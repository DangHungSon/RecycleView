<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_thanhvien"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="#EDF3ED"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/nhom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:text="Ten Nhom"
        />

    <TextView
        android:id="@+id/fan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/nhom"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="11dp"
        />
    
    <TextView
        android:id="@+id/trangthai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/fan"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/baiviet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/nhom"
        app:layout_constraintStart_toEndOf="@id/fan"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#8E8686"
        />



</androidx.constraintlayout.widget.ConstraintLayout>